const SNAKE_SECRET = String(process.env.SNAKE_SECRET || "");
function snakeSig(tgId: number, ts: number) {
  const msg = tgId + ":" + JSON.stringify(ts);
  return crypto.createHmac("sha256", SNAKE_SECRET).update(msg).digest("hex");
}
