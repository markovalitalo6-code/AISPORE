type PanelCtx = Context;

function panelText() {
  return [
    "üçÑ AISPORE ‚Äî CONTROL PANEL",
    "",
    "Choose what you want to do:",
  ].join("\n");
}

function howItWorksShort() {
  return [
    "üçÑ AISPORE ‚Äî HOW IT WORKS (Quick)",
    "",
    "üêç Snake (fun community game)",
    "‚Ä¢ Tap PLAY SNAKE",
    "‚Ä¢ Your score is saved automatically",
